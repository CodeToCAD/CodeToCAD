{
    "[jinjahtml]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false
    },
    "[jinja]": {
        "editor.formatOnPaste": false,
        "editor.formatOnSave": false
    },
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.wordWrap": "on",
    "json.schemas": [
        {
            "fileMatch": [
                "capabilities.json"
            ],
            "url": "./CodeToCAD/capabilitiesSchema.json"
        },
        {
            "fileMatch": [
                "examples.json"
            ],
            "url": "./examples/examplesSchema.json"
        }
    ],
    "python.analysis.autoImportCompletions": true,
    "python.analysis.completeFunctionParens": true,
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.typeCheckingMode": "basic",
    "python.defaultInterpreterPath": "${workspaceFolder}/development/developmentVirutalEnvironment/bin/python",
    "python.envFile": "${workspaceFolder}/development/.pythonpath.env",
    "python.testing.unittestArgs": [
        "v",
        "s",
        "./tests",
        "p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "terminal.integrated.env.linux": {
        "PYTHONPATH": "CodeToCAD:providers/blender:providers/onshape"
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "CodeToCAD:providers/blender:providers/onshape"
    },
    "terminal.integrated.env.windows": {
        "PYTHONPATH": "CodeToCAD;providers/blender;providers/onshape"
    },
}