{
    "version": "0.0.1",
    "information": "Capabilities for CodeToCAD.",
    "capabilities": {
        "Entity": {
            "information": "Capabilities shared between Parts and Sketches.",
            "clone": {
                "action": "create",
                "information": "Clone an existing entity with its geometry and properties.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    }
                }
            },
            "mirror": {
                "action": "create",
                "information": "Mirror an existing entity with respect to a landmark.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    },
                    "landmarkName": {
                        "type": "string"
                    }
                }
            },
            "pattern": {
                "action": "create",
                "information": "Clone an existing entity to follow a pattern.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    },
                    "landmarkName": {
                        "type": "string"
                    }
                }
            },
            "scale": {
                "action": "modify",
                "information": "Scale operation.",
                "parameters": {
                    "dimensions": {
                        "type": "string"
                    }
                }
            },
            "rotate": {
                "action": "modify",
                "information": "Rotate operation.",
                "parameters": {
                    "rotation": {
                        "type": "string"
                    }
                }
            },
            "rename": {
                "action": "modify",
                "information": "Rename the entity.",
                "parameters": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "extrude": {
                "action": "modify",
                "information": "Extrude a landmark by a specified dimension.",
                "parameters": {
                    "landmarkName": {
                        "type": "string"
                    },
                    "dimensions": {
                        "type": "string"
                    }
                }
            },
            "remesh": {
                "action": "modify",
                "information": "Remeshing should be capable of voxel or vertex based reconstruction, including decimating unnecessary vertices (if applicable).",
                "parameters": {
                    "strategy": {
                        "type": "string"
                    },
                    "amount": {
                        "type": "float"
                    }
                }
            },
            "delete": {
                "action": "delete",
                "information": "Delete the entity from the scene. You may need to delete an associated joint or other features.",
                "parameters": {}
            },
            "isVisible": {
                "action": "modify",
                "information": "Toggles visibility of an entity in the scene.",
                "parameters": {
                    "isVisible": {
                        "type": "boolean"
                    }
                }
            },
            "apply": {
                "action": "modify",
                "information": "Apply any modifications. This is application specific, but a general function is that it finalizes any changes made to an entity.",
                "parameters": {}
            },
            "getNativeInstance": {
                "action": "get",
                "information": "Get the native API's object instance. For example, in Blender API, this would return a bpy.object.",
                "parameters": {}
            },
            "select": {
                "action": "interact",
                "information": "Select the closest vertex or edge or face to a landmark.",
                "parameters": {
                    "landmarkName": {
                        "type": "string"
                    },
                    "selectionType": {
                        "type": "string",
                        "defaultValue": "vertex"
                    }
                }
            }
        },
        "Part": {
            "information": "Capabilities Part CRUD.",
            "alias": ["Shape"],
            "constructor": {
                "parameters": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "createFromFile": {
                "action": "create",
                "information": "Adds geometry to a part from a file. If the part does not exist, this will create it.",
                "parameters": {
                    "filePath": {
                        "type": "string"
                    },
                    "fileType": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "createPrimitive": {
                "action": "create",
                "information": "Adds geometry to a part from a primitive named primitive shape.",
                "parameters": {
                    "primitiveName": {
                        "type": "string"
                    },
                    "dimensions": {
                        "type": "string"
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "createCube": {
                "action": "create",
                "information": "Adds cuboid geometry to a part.",
                "parameters": {
                    "width": {
                        "type": "string"
                    },
                    "length": {
                        "type": "string"
                    },
                    "height": {
                        "type": "string"
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "createCone": {
                "action": "create",
                "information": "Adds cone geometry to a part.",
                "parameters": {
                    "radius": {
                        "type": "string"
                    },
                    "height": {
                        "type": "string"
                    },
                    "draftRadius": {
                        "type": "string",
                        "defaultValue": 0
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "createCylinder": {
                "action": "create",
                "information": "Adds cylinder geometry to a part.",
                "parameters": {
                    "radius": {
                        "type": "string"
                    },
                    "height": {
                        "type": "string"
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "createTorus": {
                "action": "create",
                "information": "Adds torus geometry to a part.",
                "parameters": {
                    "innerRadius": {
                        "type": "string"
                    },
                    "outerRadius": {
                        "type": "string"
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "createSphere": {
                "action": "create",
                "information": "Adds sphere geometry to a part.",
                "parameters": {
                    "radius": {
                        "type": "string"
                    },
                    "keywordArguments": {
                        "type": "object",
                        "required": false,
                        "information": "key-value pairs to pass onto the native api"
                    }
                }
            },
            "verticies": {
                "action": "create",
                "information": "Adds geometry to a part from a list of verticies.",
                "parameters": {
                    "verticies": {
                        "type": "list"
                    }
                }
            },
            "loft": {
                "action": "create",
                "information": "Interpolate between two existing parts.",
                "parameters": {
                    "part1Name": {
                        "type": "string"
                    },
                    "part1LandmarkName": {
                        "type": "string"
                    },
                    "part2Name": {
                        "type": "string"
                    },
                    "part2LandmarkName": {
                        "type": "string"
                    }
                }
            },
            "mask": {
                "action": "create",
                "information": "Clone a part of an existing part, as bounded by a landmark.",
                "parameters": {
                    "partName": {
                        "type": "string"
                    },
                    "landmarkName": {
                        "type": "string"
                    }
                }
            },
            "union": {
                "action": "modify",
                "information": "Boolean union",
                "parameters": {
                    "withPartName": {
                        "type": "string"
                    }
                }
            },
            "subtract": {
                "action": "modify",
                "information": "Boolean subtraction",
                "parameters": {
                    "withPartName": {
                        "type": "string"
                    }
                }
            },
            "intersect": {
                "action": "modify",
                "information": "Boolean intersection",
                "parameters": {
                    "withPartName": {
                        "type": "string"
                    }
                }
            },
            "bevel": {
                "action": "modify",
                "information": "A bevel is capable of creating both a fillet and a chamfer",
                "parameters": {
                    "landmarkName": {
                        "type": "string"
                    },
                    "angle": {
                        "type": "float"
                    },
                    "roundedness": {
                        "type": "number"
                    }
                }
            },
            "hollow": {
                "action": "modify",
                "information": "Remove vertices, if necessary, until the part has a specified wall thickness.",
                "parameters": {
                    "wallThickness": {
                        "type": "float"
                    }
                }
            }
        },
        "Sketch": {
            "information": "Capabilities related to adding, multiplying, and/or modifying a curve.",
            "alias": ["Curve"],
            "constructor": {
                "parameters": {
                    "name": {
                        "type": "string"
                    },
                    "curveType": {
                        "type": "CurveTypes"
                    },
                    "description": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "sweep": {
                "action": "modify",
                "information": "Extrude this  curve along the path of another",
                "parameters": {
                    "profileCurveName": {
                        "type": "string"
                    },
                    "fillCap": {
                        "type": "boolean",
                        "defaultValue": false
                    }
                }
            },
            "createText": {
                "action": "create",
                "information": "Adds text to a sketch.",
                "parameters": {
                    "text": {
                        "type": "string"
                    },
                    "fontSize": {
                        "type": "Dimension"
                    },
                    "bold": {
                        "type": "boolean",
                        "defaultValue": false
                    },
                    "italic": {
                        "type": "boolean",
                        "defaultValue": false
                    },
                    "underlined": {
                        "type": "boolean",
                        "defaultValue": false
                    },
                    "characterSpacing": {
                        "type": "int",
                        "defaultValue": 1
                    },
                    "wordSpacing": {
                        "type": "int",
                        "defaultValue": 1
                    },
                    "lineSpacing": {
                        "type": "int",
                        "defaultValue": 1
                    },
                    "fontFilePath": {
                        "type": "string",
                        "defaultValue": null
                    }
                }
            },
            "createFromVertices": {
                "action": "create",
                "information": "Create a curve from 2D/3D points.",
                "parameters": {
                    "verticesArray": {
                        "type": "list[Point]"
                    },
                    "interpolation": {
                        "type": "int",
                        "defaultValue": 64
                    }
                }
            },
            "createPoint": {
                "action": "create",
                "information": "Create a point",
                "parameters": {}
            },
            "createLine": {
                "action": "create",
                "information": "Create a line",
                "parameters": {
                    "length": {
                        "type": "Dimension"
                    },
                    "symmetric": {
                        "type": "boolean",
                        "defaultValue": false
                    }
                }
            },
            "createLineBetweenPoints": {
                "action": "create",
                "information": "Create a line between two points",
                "parameters": {
                    "pointA": {
                        "type": "Point"
                    },
                    "pointB": {
                        "type": "Point"
                    }
                }
            },
            "createCircle": {
                "action": "create",
                "information": "Create a circle",
                "parameters": {
                    "radius": {
                        "type": "Dimension"
                    }
                }
            },
            "createEllipse": {
                "action": "create",
                "information": "Create an ellipse",
                "parameters": {
                    "radiusA": {
                        "type": "Dimension"
                    },
                    "radiusB": {
                        "type": "Dimension"
                    }
                }
            },
            "createArc": {
                "action": "create",
                "information": "Create an arc",
                "parameters": {
                    "radius": {
                        "type": "Dimension"
                    },
                    "angle": {
                        "type": "Angle",
                        "defaultValue": "180d"
                    }
                }
            },
            "createArcBetweenThreePoints": {
                "action": "create",
                "information": "Create a 3-point arc",
                "parameters": {
                    "pointA": {
                        "type": "Point"
                    },
                    "pointB": {
                        "type": "Point"
                    },
                    "centerPoint": {
                        "type": "Point"
                    }
                }
            },
            "createSegment": {
                "action": "create",
                "information": "Create a segment (intersection of two circles)",
                "parameters": {
                    "innerRadius": {
                        "type": "Dimension"
                    },
                    "outerRadius": {
                        "type": "Dimension"
                    },
                    "angle": {
                        "type": "Angle",
                        "defaultValue": "180d"
                    }
                }
            },
            "createRectangle": {
                "action": "create",
                "information": "Create a rectangle",
                "parameters": {
                    "length": {
                        "type": "Dimension"
                    },
                    "width": {
                        "type": "Dimension"
                    }
                }
            },
            "createPolygon": {
                "action": "create",
                "information": "Create an n-gon",
                "parameters": {
                    "numberOfSides": {
                        "type": "int"
                    },
                    "length": {
                        "type": "Dimension"
                    },
                    "width": {
                        "type": "Dimension"
                    }
                }
            },
            "createTrapezoid": {
                "action": "create",
                "information": "Create a trapezoid",
                "parameters": {
                    "lengthUpper": {
                        "type": "Dimension"
                    },
                    "lengthLower": {
                        "type": "Dimension"
                    },
                    "height": {
                        "type": "Dimension"
                    }
                }
            }
        },
        "Landmark": {
            "information": "Landmarks are named positions on an entity.",
            "constructor": {
                "parameters": {
                    "localToEntityWithName": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "vertices": {
                "action": "create",
                "information": "A collection of point(s) in 3D space",
                "parameters": {
                    "locations": {
                        "type": "string"
                    }
                }
            },
            "rectangle": {
                "action": "create",
                "information": "Create a rectanguar shape of point(s) in 3D space",
                "parameters": {
                    "dimensions": {
                        "type": "string"
                    }
                }
            },
            "linearPattern": {},
            "circularPattern": {},
            "contourPattern": {}
        },
        "Joint": {
            "information": "Joints define the relationships and constraints between entities.",
            "constructor": {
                "parameters": {
                    "entity1Name": {
                        "type": "string"
                    },
                    "entity2Name": {
                        "type": "string"
                    },
                    "entity1LandmarkName": {
                        "type": "string"
                    },
                    "entity2LandmarkName": {
                        "type": "string"
                    },
                    "jointType": {
                        "type": "string"
                    },
                    "initialRotation": {
                        "type": "string"
                    },
                    "limitRotation": {
                        "type": "string"
                    },
                    "limitTranslation": {
                        "type": "string"
                    }
                }
            },
            "transformLandmarkOntoAnother": {
                "action": "modify",
                "information": "Transforms one landmark onto another",
                "parameters": {}
            }
        },
        "Material": {
            "information": "Materials affect the appearance and simulation properties of the parts.",
            "constructor": {}
        },
        "Scene": {
            "information": "Scene, camera, lighting, rendering, animation, simulation and GUI related functionality.",
            "constructor": {
                "parameters": {
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "create": {
                "information": "Creates a new scene"
            },
            "delete": {
                "information": "Deletes a new scene"
            },
            "export": {
                "information": "The ability to export the whole scene or specific parts and/or part groups as a 3D model, a video or image."
            },
            "setDefaultUnit": {
                "action": "update",
                "information": "Set the document's default measurements system.",
                "parameters": {
                    "unit": {
                        "type": "string"
                    }
                }
            },
            "createGroup": {
                "action": "create",
                "information": "Create a new group",
                "parameters": {
                    "name": {
                        "type": "string"
                    }
                }
            },
            "deleteGroup": {
                "action": "delete",
                "information": "Delete a new group",
                "parameters": {
                    "name": {
                        "type": "string"
                    },
                    "removeNestedEntities": {
                        "type": "boolean"
                    }
                }
            },
            "removeFromGroup": {
                "action": "delete",
                "information": "Removes an existing entity from a group",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    },
                    "groupName": {
                        "type": "string"
                    }
                }
            },
            "assignToGroup": {
                "action": "update",
                "information": "Assigns an existing entity to a new group",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    },
                    "groupName": {
                        "type": "string"
                    },
                    "removeFromOtherGroups": {
                        "type": "boolean",
                        "required": false,
                        "defaultValue": true
                    }
                }
            },
            "setVisibility": {
                "action": "update",
                "information": "Change the visibiltiy of the entity.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    },
                    "isVisible": {
                        "type": "boolean"
                    }
                }
            }
        },
        "Analytics": {
            "information": "Tools for collecting data about the entities and scene.",
            "constructor": {},
            "measureLandmarks": {
                "action": "get",
                "information": "The ubiquitous ruler and angle measurement tool.",
                "parameters": {
                    "landmark1Name": {
                        "type": "string"
                    },
                    "landmark2Name": {
                        "type": "string",
                        "required": false
                    }
                }
            },
            "getWorldPose": {
                "action": "get",
                "information": "Returns the world pose of an entity.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    }
                }
            },
            "getBoundingBox": {
                "action": "get",
                "information": "Returns the bounding box of an entity.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    }
                }
            },
            "getDimensions": {
                "action": "get",
                "information": "Returns the dimensions of an entity.",
                "parameters": {
                    "entityName": {
                        "type": "string"
                    }
                }
            }
        }
    }
}