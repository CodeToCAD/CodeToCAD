{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "definitions": {
        "returnTypeList": {
            "type": "string",
            "pattern": "^list\\[((any|string|boolean|float|list\\[float\\]|int|list\\[string\\]|Entity|Part|Sketch|Material|Landmark|Axis|Dimension|list\\[Dimension\\]|Dimensions|LengthUnit|Angle|object|Point|PresetLandmark|BoundaryBox|Animation|Scene|Camera|Vertex|Edge|Wire|Projectable|Importable|Exportable|Subdividable|Patternable|Mirrorable|PresetMaterial|Booleanable|Landmarkable)(,|))*\\]$"
        },
        "return_type": {
            "type": "string",
            "description": "A value of type: any|string|boolean|float|int|list\\[string\\]|Entity|Part|Sketch|Material|Landmark|Axis|Dimension|list\\[Dimension\\]|Dimensions|LengthUnit|Angle|object|Point|PresetLandmark|BoundaryBox|Animation|Scene|Camera|Vertex|Edge|Wire|Projectable|Importable|Exportable|Subdividable|Patternable|Mirrorable|PresetMaterial|Booleanable|Landmarkable",
            "oneOf": [
                {
                    "pattern": "^(any|string|boolean|float|int|list\\[string\\]|Entity|Part|Sketch|Material|Landmark|Axis|Dimension|list\\[Dimension\\]|Dimensions|LengthUnit|Angle|object|Point|PresetLandmark|BoundaryBox|Animation|Scene|Camera|Vertex|Edge|Wire|Projectable|Importable|Exportable|Subdividable|Patternable|Mirrorable|PresetMaterial|Booleanable|Landmarkable)$"
                },
                {
                    "$ref": "#/definitions/returnTypeList"
                }
            ]
        },
        "methodTypes": {
            "type": "string",
            "description": "Comma separated values of types: any|string|boolean|float|list\\[float\\]|int|list\\[string\\]|Entity|Part|Sketch|Material|Landmark|Axis|Dimension|list\\[Dimension\\]|Dimensions|LengthUnit|Angle|object|Point|PresetLandmark|BoundaryBox|Animation|Scene|Camera|Vertex|Edge|Wire|Projectable|Importable|Exportable|Subdividable|Patternable|Mirrorable|PresetMaterial|Booleanable|Landmarkable",
            "oneOf": [
                {
                    "pattern": "^((any|string|boolean|float|list\\[float\\]|int|list\\[string\\]|Entity|Part|Sketch|Material|Landmark|Axis|Dimension|list\\[Dimension\\]|Dimensions|LengthUnit|Angle|object|Point|PresetLandmark|BoundaryBox|Animation|Scene|Camera|Vertex|Edge|Wire|Projectable|Importable|Exportable|Subdividable|Patternable|Mirrorable|PresetMaterial|Booleanable|Landmarkable)(,|))*$"
                },
                {
                    "$ref": "#/definitions/returnTypeList"
                }
            ]
        },
        "method": {
            "description": "A method of this class.",
            "defaultSnippets": [
                {
                    "label": "Add a new method:",
                    "body": {
                        "information": "$1",
                        "action": "$2",
                        "return_type": "$3",
                        "is_static_method": false,
                        "parameters": {
                            "parameter": {
                                "information": "$4",
                                "type": "$5",
                                "default_value": "$6",
                                "required": false
                            }
                        }
                    }
                }
            ],
            "type": "object",
            "required": [
                "action",
                "information"
            ],
            "additionalProperties": false,
            "properties": {
                "parameters": {
                    "description": "Parameters of this method.",
                    "type": "object",
                    "patternProperties": {
                        ".": {
                            "description": "A parameter of this method.",
                            "required": [
                                "type"
                            ],
                            "defaultSnippets": [
                                {
                                    "label": "Add a new parameter:",
                                    "body": {
                                        "information": "$1",
                                        "type": "$2",
                                        "default_value": "$3",
                                        "required": false
                                    }
                                }
                            ],
                            "additionalProperties": false,
                            "properties": {
                                "information": {
                                    "description": "Information about this method.",
                                    "type": "string"
                                },
                                "type": {
                                    "$ref": "#/definitions/methodTypes"
                                },
                                "default_value": {
                                    "description": "The default value for this parameter.",
                                    "type": [
                                        "string",
                                        "boolean",
                                        "number",
                                        "null"
                                    ]
                                },
                                "required": {
                                    "description": "Is this parameter required?",
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                },
                "action": {
                    "description": "Type of action performed by this method. One of get|create|modify|delete|interact.",
                    "type": "string",
                    "pattern": "^(get|create|modify|delete|interact)$"
                },
                "information": {
                    "description": "Information about this method.",
                    "type": "string"
                },
                "return_type": {
                    "$ref": "#/definitions/return_type"
                },
                "is_static_method": {
                    "type": "boolean"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "action": {
                                "const": "get"
                            }
                        }
                    },
                    "then": {
                        "required": [
                            "return_type"
                        ]
                    }
                }
            ]
        }
    },
    "required": [
        "information",
        "capabilities"
    ],
    "additionalProperties": false,
    "properties": {
        "information": {
            "description": "Information about this Capabilities.json file.",
            "type": "string"
        },
        "capabilities": {
            "additionalProperties": false,
            "description": "Key names denote Class names. Values are methods of the class.",
            "type": "object",
            "propertyNames": {
                "allOf": [
                    {
                        "pattern": "[A-Z].+$"
                    }
                ]
            },
            "patternProperties": {
                "[A-Z].+$": {
                    "type": "object",
                    "propertyNames": {
                        "allOf": [
                            {
                                "pattern": "[a-z].+$"
                            }
                        ]
                    },
                    "required": [
                        "information"
                    ],
                    "properties": {
                        "information": {
                            "description": "Information about this class.",
                            "type": "string"
                        },
                        "is_interface_only": {
                            "information": "This capability only generates an interface, no providers. This is meant to be used when a capability should be implemented by other classes.",
                            "type": "boolean"
                        },
                        "constructor": {
                            "description": "A schema for this class's constructor method.",
                            "type": "object"
                        },
                        "extends": {
                            "description": "The names of super class(es) that this class extends (polymorphism).",
                            "type": "string"
                        },
                        "implements": {
                            "description": "The names of classes that this class implements (polymorphism).",
                            "type": "string"
                        }
                    },
                    "defaultSnippets": [
                        {
                            "label": "Add a new capability class:",
                            "body": {
                                "information": "$1",
                                "extends": "$3",
                                "implements": "$4",
                                "is_interface_only": false,
                                "constructor": null,
                                "methodA": null
                            }
                        }
                    ],
                    "patternProperties": {
                        ".": {
                            "$ref": "#/definitions/method"
                        }
                    }
                }
            },
            "properties": {}
        }
    }
}